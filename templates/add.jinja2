{% extends 'base.jinja2' %}

{% block subtitle %}Add Donation{% endblock subtitle %}

{% block content %}
<form method="POST">
    {% if error %}<p>{{ error }}</p>{% endif %}
    <label for="donor-input">Donor name:</label>
    <input id="donor-input" type="text" name="donor">
    <br>
    <label for="amount-input">Donation amount:</label>
    <input id="amount-input" type="number" name="amount">
    <br>
    <input type="submit" value="Add Donation">
</form>
{% endblock content %}